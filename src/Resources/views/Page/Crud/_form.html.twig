{% from '@LwcCms/Macro/translationForm.html.twig' import translationFormWithSlug %}
{% form_theme form '@LwcCms/Form/theme.html.twig' %}

{% include '@LwcCms/Modal/_resourcePreview.html.twig' %}

{{ form_errors(form) }}

<div class="ui two column stackable grid">
    <div class="column">
        <div class="ui segment">
            {{ form_row(form.code) }}
            {{ form_row(form.enabled) }}
            {{ form_row(form.sections) }}

            <a href="#" class="ui labeled button icon primary Lwc-cms-resource-preview" data-url="{{ path('lwc_cms_admin_page_preview', {'id': form.vars.data.id}) }}">
                <i class="eye icon"></i>
                {{ 'lwc_cms.ui.preview'|trans }}
            </a>
        </div>
    </div>
</div>

<div class="ui one column stackable grid">
    <div class="column" id="Lwc-block-image">
        {{ translationFormWithSlug(form.translations, '@LwcCms/Page/Crud/_slugField.html.twig', page) }}
    </div>
</div>
